<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Bold Reports Designer Styles -->
    <link href="https://cdn.boldreports.com/8.1.1/content/v2.0/tailwind-light/bold.report-designer.min.css" rel="stylesheet" />

    <!-- Bold Reports Viewer Styles -->
    <link href="https://cdn.boldreports.com/8.1.1/content/v2.0/tailwind-light/bold.report-viewer.min.css" rel="stylesheet" />

    <script src="https://cdn.boldreports.com/embedded-reports/5.2.0/bold.report-designer.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>
<body>
    <div class="container">
        <div style="min-height: 600px;width: 100%;">
            @RenderBody()
        </div>
    </div>

    <!-- Bold Reports Script Manager -->
    <bold-script-manager></bold-script-manager>

    <!-- JQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Bold Reports Common Scripts -->
    <script src="https://cdn.boldreports.com/8.1.1/scripts/v2.0/common/bold.reports.common.min.js"></script>
    <script src="https://cdn.boldreports.com/8.1.1/scripts/v2.0/common/bold.reports.widgets.min.js"></script>

    <!-- Bold Reports Designer Script -->
    <script src="https://cdn.boldreports.com/8.1.1/scripts/v2.0/bold.report-designer.min.js"></script>

    <!-- Bold Reports Viewer Script -->
    <script src="https://cdn.boldreports.com/8.1.1/scripts/v2.0/bold.report-viewer.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
